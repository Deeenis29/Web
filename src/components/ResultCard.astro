---
interface Props {
  image: string;
  alt: string;
  title: string;
  description: string;
}

const { image, alt, title, description } = Astro.props;
---

<div class="relative rounded-[28px] overflow-hidden w-full max-w-sm mx-auto">
  {/* Container for both image and content */}
  <div class="relative">
    {/* Image section - positioned absolutely to go behind the yellow section */}
    <div class="aspect-[5/3] w-full">
      <img 
        src={image}
        alt={alt}
        class="w-full h-full object-cover"
      />
    </div>
    
    {/* Yellow wavy section with content */}
    <div class="absolute inset-0 ">
      <div class="relative ">
        {/* Yellow background with waves */}
        <img
          src="/cuadroweb.png"
          alt=""
          class="w-fullh h-full object-cover z-[1] "
          aria-hidden="true"
        />
        
        {/* Text content */}
        <div class="absolute inset-0 p-8 text-white text-center">
          <h3 class="text-2xl font-bold mb-4" set:html={title} />
          <p class="text-sm leading-relaxed">
            {description}
          </p>
        </div>
      </div>
    </div>
  </div>
</div>